# single line basestring
string_A = "Hello World"

# multiple-line stringa
string_B= "This is \
    multiple\
    line\
    string"
    
print (string_A[0])
print (string_A[3])
print (string_A[10])

#lowcase = minuscolo
print(string_A.lower())

#uppercase = maiuscolo
print(string_A.upper())

#title case = rende maiuscole la prima lettera della stringa e la prima lettera dopo lo spazio
print(string_A.title())


string1: str = 'Hello World'
